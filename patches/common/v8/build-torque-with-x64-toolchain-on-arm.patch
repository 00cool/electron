Subject: build-torque-with-x64-toolchain-on-arm.patch

torque binary has to be run during the build.

diff --git a/BUILD.gn b/BUILD.gn
index 868062438c297c3d7e59ba87a2b6b7768fcbec29..6d9564066754ee0bd306d569e7960f6e471b45d6 100644
--- a/BUILD.gn
+++ b/BUILD.gn
@@ -180,7 +180,8 @@ declare_args() {
 
 v8_generator_toolchain = v8_snapshot_toolchain
 if (host_cpu == "x64" &&
-    (v8_current_cpu == "mips" || v8_current_cpu == "mips64")) {
+    (v8_current_cpu == "mips" || v8_current_cpu == "mips64" ||
+     v8_current_cpu == "arm" || v8_current_cpu == "arm64")) {
   v8_generator_toolchain = "//build/toolchain/linux:clang_x64"
 }
 
@@ -3372,7 +3373,7 @@ if (v8_monolithic) {
 # Executables
 #
 
-if (current_toolchain == v8_generator_toolchain) {
+if (current_toolchain == current_toolchain) {
   v8_executable("bytecode_builtins_list_generator") {
     visibility = [ ":*" ]  # Only targets in this file can depend on this.
 
@@ -3422,7 +3423,7 @@ if (v8_use_snapshot && current_toolchain == v8_snapshot_toolchain) {
   }
 }
 
-if (current_toolchain == v8_snapshot_toolchain) {
+if (current_toolchain == current_toolchain) {
   v8_executable("torque") {
     visibility = [ ":*" ]  # Only targets in this file can depend on this.
 
